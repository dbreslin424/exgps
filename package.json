{
  "name": "exgps",
  "version": "1.0.0",
  "description": "Tool to extract GPS coordinates from photos",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbreslin424/exgps"
  },
  "main": "exgps.js",
  "bin": {
    "exgps": "bin/cli.js"
  },
  "scripts": {
    "start": "node exgps.js",
    "test": "jest",
    "dev": "tsc",
    "watch": "tsc -w",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf ./coverage"
  },
  "author": "Dan Breslin",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "coveralls": "^3.0.3",
    "jest": "^24.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "exif": "^0.6.0",
    "handlebars": "^4.1.0",
    "minimist": "^1.2.0"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.yml",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/exgps.ts",
      "src/modules/**/*.ts",
      "!**/index.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/testSetup.js"
    ]
  }
}
